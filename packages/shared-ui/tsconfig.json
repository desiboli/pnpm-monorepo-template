{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // React JSX transform (no need to import React)
    "jsx": "react-jsx",
    
    // Include DOM types for React components
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/shared-ui/*": ["./src/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
